<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.antoniafrenzel.test.Seite3"
    tools:showIn="@layout/activity_seite3"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        app:srcCompat="@mipmap/ic_info" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:padding="10dp"
        android:text="Wähle ein Thema aus, das Dich interessiert!" />

    <Button
        android:id="@+id/button_abbrechen"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:onClick="startNewActivity"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Datenschutz"
        android:onClick="Infos_Datenschutz"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Standortlokalisierung"
        android:onClick="Infos_Standortlokalisierung"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Google Standortlokalisierung"
        android:onClick="Infos_Google"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>