<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.antoniafrenzel.test.Quiz_Start"
    tools:showIn="@layout/activity_second"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_quiz"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:textSize="16dp"
        android:text=" Willkommen zum Quiz! \n\n Hier kannst du dein Wissen testen.\n Bereit? Dann starte jetzt das Quiz."
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_weight="0.43" />

    <Button
        android:id="@+id/button_QuizStarten"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:onClick="startQuiz"
        android:text="Quiz starten"
        android:visibility="visible"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/button_zurueck"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="startNewActivity"
        android:text="zurÃ¼ck"
        android:layout_gravity="center"
     />

</LinearLayout>
